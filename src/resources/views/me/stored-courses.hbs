<div class="mt-4">
  <h3>Khóa học của tôi</h3>

  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tên Khóa Học</th>
        <th scope="col">Mô Tả</th>
        <th scope="col">Thời Gian Tạo</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>{{this.createdAt}}</td>
          <td class="d-flex">
            <a href="/courses/{{this._id}}/edit" type="button" class="btn btn-primary text-white bg-primary btn-link">Edit</a>
            <a href="" type="button" class="btn btn-link text-white ml-2 bg-danger btn-danger">Delete</a>
          </td>
        </tr>
      {{/each}}

    </tbody>
  </table>
</div>